{{#if hasAddons}}
    {{#input-group containedBy=this}}
        {{#if hasPrefix}}
            {{input-addon icon=prefixIcon text=prefixText iconFamily=iconFamily checkbox=prefixCheckbox value=prefixValue}}
        {{/if}}
        {{yield this}}
        {{#if hasPostfix}}
            {{input-addon icon=postfixIcon text=postfixText iconFirst=false iconFamily=iconFamily checkbox=postfixCheckbox value=postfixValue}}
        {{/if}}
    {{/input-group}}
{{else}}
    {{yield this}}    
{{/if}}
{{#if hasFeedback}}
    {{input-feedback containedBy=this}}
{{/if}}
{{#if hasScreenReader}}
    {{input-screen-reader sr=sr}}
{{/if}}

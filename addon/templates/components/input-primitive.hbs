<input
  type="{{type}}"
  id="input-{{id}}"
  class="ui-input {{name}}{{class}}"
  value={{value}}
  placeholder={{placeholder}}
  disabled={{disabled}}
  autocomplete={{autocomplete}}
  autofocus={{autofocus}}
  form={{form}}
  aria-label={{_label}}

  max={{max}}
  min={{min}}
  step={{step}}

  onblur={{action 'onBlur'}}
  oninput={{action 'onChange'}}
  onchange={{action 'onChange'}}
>

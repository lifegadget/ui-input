{{#if hasBlock}}
  {{yield (hash
    label=(component 'ui-input-label'
      for=(concat 'input-' id)
      name=name
    )
    group=(component 'input-group'
      id=id
      type=type
      skin=skin
      name=name
      mood=mood
      class=classy
      value=_value
      placeholder=placeholder
      disabled=disabled
      readonly=readonly
      autocomplete=_autoComplete
      autofocus=autofocus

      onPressed=(action 'onPressed')
      onChange=onChange
      onBlur=onBlur
    )
    input = (component 'input-primitive'
      id=id
      type=type
      skin=skin
      name=name
      class=classy
      value=_value
      placeholder=placeholder
      disabled=disabled
      readonly=readonly
      autocomplete=_autoComplete
      autofocus=autofocus

      onBlur=(action 'onBlur')
      onChange=(action 'onChange')
    )
  )}}


{{else}} {{! INLINE COMPONENT }}

  {{#if label}}
    {{ui-input-label for=(concat 'input-' id)}}
  {{/if}}

  {{! GROUPED }}
  {{#if (or pre post preIcon postIcon button preButton postButton)}}
    {{#input-group
      id=id
      type=type
      skin=skin
      name=name
      class=classy
      value=_value
      placeholder=placeholder
      disabled=disabled
      readonly=readonly
      autocomplete=_autoComplete
      autofocus=autofocus

      as |g|
    }}
      {{! PRE }}
      {{#if (or pre preIcon preButton)}}
        {{#if preButton}}
          {{g.button preButton
            id=(concat 'pre-btn-' id)
            icon=preIcon
            mood=(or preButtonMood mood)
            onClick=(action 'onPressed' 'pre')
          }}
        {{else}}
          {{#g.addon}}
            {{#if preIcon}}
              {{ui-icon preIcon}}
            {{/if}}
            {{pre}}
          {{/g.addon}}
        {{/if}}
      {{/if}}

      {{g.input
        onChange=onChange
        onBlur=onBlur
        onSubmit=onSubmit
      }}

      {{! POST }}
      {{#if (or post postIcon button postButton)}}
        {{#if (or button postButton)}}
          {{g.button (or button postButton)
            id=(concat 'post-btn-' id)
            icon=postIcon
            mood=(or buttonMood postButtomMood mood)
            onClick=(action 'onPressed' 'post')
          }}
        {{else}}
          {{#g.addon}}
            {{#if postIcon}}
              {{ui-icon postIcon}}
            {{/if}}
            {{post}}
          {{/g.addon}}
        {{/if}}
      {{/if}}

    {{/input-group}}

    {{! NOT GROUPED }}
  {{else}}
    <input
      id="input-{{id}}"
      class="{{classy}}"
      type="{{type}}"
      name="{{name}}"
      pattern={{pattern}}
      value={{_value}}
      placeholder="{{placeholder}}"
      disabled="{{if disabled 'disabled'}}"
      autocomplete={{_autoComplete}}
      autofocus={{autofocus}}
      inputmode="{{inputmode}}"

      onblur={{action 'onBlur'}}
      oninput={{action 'onChange'}}
    >
  {{/if}}


{{/if}}

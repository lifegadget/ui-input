{{#if hasBlock}}
  {{yield (hash
    label=(component 'ui-input-label'
      for=(concat 'input-' id)
      name=name
    )
    group=(component 'input-group'
      id=id
      type=type
      skin=skin
      name=name
      class=classy
      value=_value
      placeholder=placeholder
      disabled=disabled
      readonly=readonly
      autocomplete=_autoComplete
      autofocus=autofocus
    )
    input = (component 'input-primitive'
      id=id
      type=type
      skin=skin
      name=name
      class=classy
      value=_value
      placeholder=placeholder
      disabled=disabled
      readonly=readonly
      autocomplete=_autoComplete
      autofocus=autofocus

      onBlur=(action 'onBlur')
      onChange=(action 'onChange')
    )
  )}}


{{else}} {{! INLINE COMPONENT }}

  {{#if label}}
    {{ui-input-label for=(concat 'input-' id)}}
  {{/if}}

  {{! GROUPED }}
  {{#if (or pre post preIcon postIcon preButton postButton)}}
    {{#input-group
      id=(concat 'group-' id)
      type=type
      skin=skin
      name=name
      class=classy
      value=_value
      placeholder=placeholder
      disabled=disabled
      readonly=readonly
      autocomplete=_autoComplete
      autofocus=autofocus

      as |g|
    }}
     {{#if (or pre preIcon)}}
        {{#g.addon}}
          {{#if preIcon}}
            {{ui-icon preIcon}}
          {{/if}}
          {{pre}}
        {{/g.addon}}
      {{/if}}

      {{g.input
        onChange=onChange
        onBlur=onBlur
        onSubmit=onSubmit
      }}

      {{#if (or post postIcon postButton)}}
      {{#if postButton}}
        {{#g.addon}}
          {{ui-button postButton
            mood=mood
            icon=postIcon
            onClick=(action onPressed)
          }}
          {{#if postIcon}}
            {{ui-icon postIcon}}
          {{/if}}
          {{post}}
        {{/g.addon}}
      {{else}}
        {{#g.addon}}
          {{#if postIcon}}
            {{ui-icon postIcon}}
          {{/if}}
          {{post}}
        {{/g.addon}}
      {{/if}}
      {{/if}}

    {{/input-group}}

    {{! NOT GROUPED }}
  {{else}}
    <input
      id="input-{{id}}"
      class="{{classy}}"
      type="{{type}}"
      name="{{name}}"
      value={{_value}}
      placeholder="{{placeholder}}"
      disabled="{{if disabled 'disabled'}}"
      autocomplete={{_autoComplete}}
      autofocus={{autofocus}}
      inputmode="{{inputmode}}"

      onblur={{action 'onBlur'}}
      oninput={{action 'onChange'}}
    >
  {{/if}}


{{/if}}

<h4>Example(s)</h4>

<div class="configuration col-xs-12">
    <div class="config-icon col-xs-1">{{icon-cog size="2x"}}</div>
    <div class="config-section col-xs-11">
        <span class="col-xs-7">Color Class:            
            {{ui-button-radio size='small' choices='default,success,info,primary,warning,error' selected=myClassColor}}<br/>
        </span>
        <span class="col-xs-5 text-right">
            Text Color:
            {{text-input width='55%' size='small' value=textColor}}<br/>
            Background Color:
            {{text-input width='55%' size='small' value=backColor}}<br/>
            Border Color:
            {{text-input width='55%' size='small' value=borderColor}}<br/>
            Outline Color:
            {{text-input width='55%' size='small' value=outlineColor}}<br/>
        </span>
        <p>&nbsp;</p>
        <span class="col-xs-12">Style: 
            {{ui-button-radio size='small' choices='bootstrap,flat' selected=myStyle}}
        </span>
    </div>
</div>

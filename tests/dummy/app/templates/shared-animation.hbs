        <div class="handlebars col-xs-8">
            <br/>
            <code> \{{text-input animateDisabled='rubberBand' animateEnabled='bounce' disabled={{buttonStatus}} textAlign='center' placeholder='Disability' style='{{style}}' size='huge' width='75%'}}</code>  
        </div>
    </div>    
